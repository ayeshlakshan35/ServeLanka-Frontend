rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profile
    match /users/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;

      // Posts under a user
      match /posts/{postId} {
        // Owner-only writes
        allow create, update, delete: if request.auth != null && request.auth.uid == uid;

        // Reads: any authenticated user can read all posts
        allow read: if request.auth != null;
      }
    }

    // Collection group reads for /posts (Home feed) â€” allow authenticated users to read all posts
    match /{path=**}/posts/{postId} {
      allow read: if request.auth != null;
    }

    // Bookings
    match /bookings/{bookingId} {
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;

      allow read: if request.auth != null
                  && (resource.data.userId == request.auth.uid
                      || resource.data.providerId == request.auth.uid);

      allow update: if request.auth != null
                    && resource.data.providerId == request.auth.uid;

      allow delete: if request.auth != null
                    && (resource.data.userId == request.auth.uid
                        || resource.data.providerId == request.auth.uid);
    }

    // Jobs
    match /jobs/{jobId} {
      allow read, list: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null
                            && resource.data.createdBy == request.auth.uid;
    }

    // National IDs
    match /national_ids/{nic} {
      allow get: if request.auth != null;
      allow list: if false;
      allow create: if request.auth != null
                    && request.resource.data.uid == request.auth.uid
                    && !exists(/databases/$(database)/documents/national_ids/$(nic));
      allow update: if false;
      allow delete: if request.auth != null
                    && resource.data.uid == request.auth.uid;
    }

    // Phone numbers
    match /phone_numbers/{phone} {
      allow get: if request.auth != null;
      allow list: if false;
      allow create: if request.auth != null
                    && request.resource.data.uid == request.auth.uid
                    && !exists(/databases/$(database)/documents/phone_numbers/$(phone));
      allow update: if false;
      allow delete: if request.auth != null
                    && resource.data.uid == request.auth.uid;
    }
  }
}